<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tx_thirdQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What do you like to do?"
        android:textSize="10pt"
        android:textColor="@color/black"
        />

    <CheckBox
        android:id="@+id/cb_gameChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play games"
        android:textColor="@color/black"
        android:textSize="10pt"
        />

    <CheckBox
        android:id="@+id/cb_bakeChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baking"
        android:textSize="10pt"
        android:textColor="@color/black"
        />

    <CheckBox
        android:id="@+id/cb_readChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reading"
        android:textColor="@color/black"
        android:textSize="10pt"
        />

    <TextView
        android:id="@+id/tx_firstQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How old are you?"
        android:textColor="@color/black"
        android:textSize="10pt"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 14"
            />

        <TextView
            android:id="@+id/tx_secondQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What gender are you?"
            android:textColor="@color/black"
            android:textSize="10pt"
            />

        <RadioGroup
            android:id="@+id/rg_genderQuestions"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/rb_femaleChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@color/black"
                android:textSize="10pt"
                />

            <RadioButton
                android:id="@+id/rb_maleChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="10pt"
                android:textColor="@color/black"
                />

            <RadioButton
                android:id="@+id/rb_notSayChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perfer not to say"
                android:textColor="@color/black"
                android:textSize="10pt"
                />

        </RadioGroup>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>